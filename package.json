{
  "name": "nomnom-backend",
  "version": "1.0.0",
  "description": "NoMoM Backend API - キッチンカー情報管理システム",
  "main": "index.js",
  "scripts": {
    "dev": "sls offline start",
    "deploy": "sls deploy",
    "deploy:dev": "sls deploy --stage dev",
    "deploy:prod": "sls deploy --stage prod",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "build": "tsc",
    "clean": "rm -rf .serverless dist",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "aws-lambda",
    "serverless",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "aws-lambda": "^1.0.7",
    "pg": "^8.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^22.9.3",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "serverless": "^4.18.0",
    "serverless-offline": "^14.2.0",
    "serverless-plugin-typescript": "^2.1.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
